<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

<entity name="Gym\Infrastructure\Exercise\Exercise" table="exercises">
    <id name="id" type="string" column="id"/>
    <field name="name" type="string" column="name"/>
    <field name="separateLoad" type="boolean" column="separate_load"/>
    <field name="description" type="string" column="description"/>
    <field name="image" type="string" column="image"/>
</entity>

</doctrine-mapping>