{% extends 'base.html.twig' %}
{% block body %}
    <div class="columns">
        <div class="column">
            <figure class="image">
                <img src="{{ '/photos/' ~ asset(station['photo']) }}">
            </figure>

        </div>
        <div class="column">
            <div class="content">
                <h1>{{ station['name'] }}</h1>
                Tagi:
                {% for tag in station['tags'] %}
                    <span class="button is-small">{{ tag }}</span>
                {% endfor %}
            </div>
            <div class="buttons">
                <a class="button is-warning is-fullwidth" href="{{ path('station_update', {'id': station['id']}) }}">Edytuj</a>
                <a class="button is-danger is-fullwidth" href="{{ path('station_delete', {'id': station['id']}) }}">Usu≈Ñ</a>
            </div>
        </div>
    </div>
{% endblock %}