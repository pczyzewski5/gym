{% extends 'base.html.twig' %}
{% block body %}
    {% set imageSrc = form.image.vars.data is null
        ? asset('images/no_image_available.jpg')
        : '/photos/' ~ form.image.vars.data
    %}
    <style>
        form {
            height: 100%;
            display: flex;
            flex-direction: column;
        }
    </style>

    <div class="columns">
        <div class="column">
            <figure class="image">
                <img src="{{ imageSrc }}">
            </figure>
        </div>
        <div class="column">
            {{ include('station/form.html.twig') }}
        </div>
    </div>

    <script src="{{ asset('js/upload_image_helper.js') }}"></script>
{% endblock %}
