{% extends 'base.html.twig' %}
{% block body %}
    <nav class="level">
        <div class="level-item has-text-centered">
            <form action="{{ path('login') }}" method="post">
                <div class="field">
                    <div class="control has-icons-left">
                        <input class="input" type="email" name="_username" value="{{ last_username }}">
                        <span class="icon is-small is-left">
                    <i class="fas fa-envelope"></i>
                </span>
                    </div>
                </div>

                <div class="field">
                    <div class="control has-icons-left">
                        <input class="input" type="password" name="_password">
                        <span class="icon is-small is-left">
                    <i class="fas fa-key"></i>
                </span>
                    </div>
                </div>

                <input type="hidden" name="_target_path" value="{{ path('login') }}">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="field">
                    <div class="control">
                        <button type="submit" class="button is-primary is-fullwidth">Zaloguj</button>
                    </div>
                </div>
            </form>
        </div>
    </nav>
{% endblock %}
