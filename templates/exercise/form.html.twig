{{ form_start(form) }}
<link rel="stylesheet" href="{{ asset('css/checkbox_switch.css') }}">
<style>
    .switch-container {
        height: 40px;
    }
</style>
<div class="field">
    <label class="label">{{ form_label(form.name) }}</label>
    <div class="control">
        {{ form_widget(form.name) }}
    </div>
    <p class="help is-danger">{{ form_errors(form.name) }}</p>
</div>

<div class="field">
    <label class="label">{{ form_label(form.tags) }}</label>
    <div class="control">
        {{ form_widget(form.tags) }}
    </div>
    <p class="help is-danger">{{ form_errors(form.tags) }}</p>
</div>

<div class="field">
    <label class="label">{{ form_label(form.description) }}</label>
    <div class="control">
        {{ form_widget(form.description) }}
    </div>
    <p class="help is-danger">{{ form_errors(form.description) }}</p>
</div>

<div class="field">
    <label class="label">{{ form_label(form.image_upload) }}</label>
    <div class="control">
        <div class="file">
            <label class="file-label">
                {{ form_widget(form.image_upload) }}
                <span class="file-cta">
                    <span class="file-icon">
                        <i class="fas fa-upload"></i>
                    </span>
                    <span class="file-label">
                        Wybierz plik...
                    </span>
                </span>
            </label>
        </div>
    </div>
    <p class="help is-danger">{{ form_errors(form.image_upload) }}</p>
</div>

<div class="control">
    <div class="switch-container">
        <label class="switch">
            <input
                    type="checkbox"
                    id="{{ form.separate_load.vars.id }}"
                    name="{{ form.separate_load.vars.full_name }}"
                    {% if form.separate_load.vars.data == 1 %}
                        checked
                    {% endif %}
            >
            <div class="slider round"></div>
        </label>
        <div class="switch-desc">{{ form.separate_load.vars.label }}</div>
    </div>
</div>
{% do form.separate_load.setRendered() %}

<div class="field">
    <div class="control">
        {{ form_widget(form.zapisz) }}
    </div>
</div>
{{ form_end(form) }}

<script src="{{ asset('js/checkbox_switch.js') }}"></script>
<script src="{{ asset('js/attach_tags_input.js') }}"></script>