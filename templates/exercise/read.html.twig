{% extends 'base.html.twig' %}
{% block body %}
    <style>
        .tag-container {
            display: flex;
            align-items: baseline;
        }
        .tag-container span {
            margin-right: 5px;
        }
        .column {
            display: flex;
            flex-direction: column;
        }
        .column .content {
            flex-grow: 1;
        }
    </style>

    <div class="columns">
        <div class="column">
            <figure class="image">
                <img src="{{ '/photos/' ~ asset(exercise['image']) }}">
            </figure>

        </div>
        <div class="column">
            <div class="content">
                <h1>{{ exercise['name']|ucfirst }}</h1>
                <div class="tag-container">
                    <span>Tag:</span>
                    <span class="button is-small is-rounded is-outlined">{{ exercise['tag'] }}</span>
                </div>
                <hr>
                {{ exercise['description'] }}
            </div>
            <div class="buttons">
                <a class="button is-warning is-fullwidth" href="{{ path('exercise_update', {'id': exercise['id']}) }}">Edytuj</a>
                <a class="button is-danger is-fullwidth" href="{{ path('exercise_delete', {'id': exercise['id']}) }}">Usu≈Ñ</a>
            </div>
        </div>
    </div>
{% endblock %}