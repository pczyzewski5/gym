{% extends 'base.html.twig' %}
{% block body %}
    <style>
        .table-item {
            cursor: pointer;
        }
    </style>
    <div class="container is-max-desktop">
        <table class="table is-striped is-hoverable is-fullwidth">
            <thead>
            <tr>
                <th>#</th>
                <th>tagi</th>
                <th>nazwa</th>
            </tr>
            </thead>
            <tbody>
            {% for key, exercise in exercises %}
                <tr class="table-item" href="{{ path('exercise_read', {'id': exercise['id']}) }}">
                    <td>{{ key + 1 }}</td>
                    <td>
                        {% for tag in exercise['tags'] %}
                            <span class="button is-small is-rounded is-outlined">{{ tag }}</span>
                        {% endfor %}
                    </td>
                    <td>{{ exercise['name'] }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <script src="{{ asset('js/list_helper.js') }}"></script>
{% endblock %}